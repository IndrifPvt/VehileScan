<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="colorControlActivated">@color/colorBlack</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
    </style>

    <style name="AppThemeActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="colorControlActivated">@color/colorBlack</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGray</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="colorControlActivated">@color/colorBlack</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/ralewayregular</item>
    </style>

    <style name="MatchSpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/MatchSpinnerStyle</item>
    </style>

    <style name="MatchSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/colorGray</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:gravity">start</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:nestedScrollingEnabled">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:textColor">@color/colorGray</item>

    </style>
    <style name="ActivityAppThemeTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>



    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker" tools:targetApi="lollipop">
        <item name="android:headerBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:calendarTextColor">@android:color/white</item>
        <item name="android:dayOfWeekTextAppearance">@android:color/white</item>
        <item name="android:dayOfWeekBackground">@android:color/white</item>
        <item name="android:yearListSelectorColor">@android:color/white</item>
        <item name="android:yearListItemTextAppearance">@android:color/white</item>
        <item name="android:headerDayOfMonthTextAppearance">@android:color/white</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:datePickerMode">calendar</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NavDrawerFontStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/text_size_twenty</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:gravity">center</item>
    </style>




    <style name="ActivityAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGray</item>
    </style>


    <style name="CheckBoxAppTheme" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textSize">@dimen/text_size_twelve</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="CustomPopUpThemeBlue" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:state_enabled">false</item>
        <item name="android:state_pressed">false</item>
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorGray</item>
        <item name="textAppearanceListItem">@color/colorGray</item>
        <item name="android:textColor">@color/colorGray</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorGray</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="PopTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>
</resources>
